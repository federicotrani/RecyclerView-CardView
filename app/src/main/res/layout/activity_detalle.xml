<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ftrani.recyclerview.DetalleActivity">

    <ImageView
        android:id="@+id/imgDetalleFoto"
        android:layout_width="match_parent"
        tools:src="@drawable/no_avatar"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvDetalleNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="NOMBRE"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/imgDetalleFoto"/>

    <TextView
        android:id="@+id/tvDetalleTelefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="TELEFONO"
        android:gravity="center_horizontal"
        android:layout_below="@id/tvDetalleNombre"/>

    <TextView
        android:id="@+id/tvDetalleEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="EMAIL"
        android:gravity="center_horizontal"
        android:layout_below="@id/tvDetalleTelefono"/>

    <Button
        android:id="@+id/btnCerrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Cerrar" />

</RelativeLayout>
